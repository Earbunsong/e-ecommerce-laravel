# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# For Laravel Cloud Deployment
# ========================================

# CRITICAL: Update these for production
APP_ENV=production
APP_DEBUG=false
APP_URL=https://e-ecommerce-laravel-main-rxpjft.laravel.cloud

# Session Configuration (REQUIRED for HTTPS)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_DOMAIN=.laravel.cloud
SESSION_ENCRYPT=false
SESSION_PATH=/

# Database (Laravel Cloud auto-configures these)
DB_CONNECTION=pgsql

# Storage
FILESYSTEM_DISK=s3

# Cache
CACHE_STORE=database

# Queue
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_ENCRYPTION=tls

# IMPORTANT NOTES:
# 1. After updating these variables on Laravel Cloud, run:
#    - php artisan config:clear
#    - php artisan cache:clear
#    - php artisan route:clear
#
# 2. Make sure SESSION_SECURE_COOKIE=true for HTTPS
#
# 3. SESSION_DOMAIN should be .laravel.cloud for Laravel Cloud deployments
